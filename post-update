git-update-server-info
name=$(basename $(readlink -f $(dirname $(dirname $0))))
git_tools=$(dirname $(readlink -f $0))
wget --quiet -O - "http://mirror.freegeek.org/update-mirror.php?project=$name&type=git"
exit
# TODO: only run this on the changed branch. The email hook
# obviously can tell, so we should steal code from there.
# TODO: on master, don't touch already closed things. check for the
# dist if it's UNRELEASED.
cd /tmp/
if [ ! -d $name ]; then
    git clone -q /git/$name
else
    cd $name
    git pull -q
fi
export PATH=.:$PATH
export RTCONFIG=/usr/local/ass/configs/svn/rtrc
for i in $(GIT_DIR=/git/fgdb.rb git branch | sed 's/^*/ /'); do
    if [ -f .git/refs/heads/$i ]; then
        git checkout $i
        git pull
    else
        git checkout -b $i origin/$i
    fi
    if echo $i | grep -q ^release_; then
        $git_tools/rt/RT-close.pl --close
    else
        $git_tools/rt/RT-close.pl --pending
    fi
done
for i in $(git tag); do
    git branch -D temptag || true
    git checkout -b temptag $i
    $git_tools/rt/RT-close.pl --close
fi
