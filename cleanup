#!/bin/sh

U=ryan52

if [ "$(id -un)" != "$U" ]; then
    su - "$U" -c "$0"
    exit $?
fi

usage(){
echo "======================================"
echo "Current usage: $(du -sh . | sed 's/\s.*//')"
echo "======================================"
}

cd /git

clean(){
    if [ ! -w . ]; then
	READONLY=t
    else
	READONLY=f
    fi
    if [ "$READONLY" = "t" ]; then
	chmod -R u+w .
    fi
    git gc
    git repack
    git repack -Ad
    git gc
    if [ "$READONLY" = "t" ]; then
	chmod -R a-w .
    fi
}

usage
for i in `ls | grep -v cleanup`; do cd $i; clean; cd ..; done
usage
